<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserUpdateReservationPageActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_reservationDetails_user"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/numeEveniment_reservationDetails_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nume eveniment"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/artist_reservationDetails_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Artist eveniment"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/locatie_reservationDetails_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Locatie"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/data_reservationDetails_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/virgula_reservationDetails_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" , "
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/ora_reservationDetails_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ora"
            android:textSize="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/descriere_reservationDetails_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descriere"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/textPret_reservationDetails_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pret bilet: "
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/pret_reservationDetails_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pret"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/minus_cantitate_rezervare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_minusicon"/>
        <TextView
            android:id="@+id/cantitate_bilete_rezervare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/plus_cantitate_rezervare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_addicon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/updateReservationButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="#9372C3"
            android:text="Actualizeaza rezervare"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/buyReservationButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#9372C3"
            android:text="Cumpara bilete"
            android:textSize="18dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>


</LinearLayout>